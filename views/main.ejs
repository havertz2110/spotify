  <div id="recordModal">
    <div id="recordModalContent">
      <span class="close" id="closeModal">&times;</span>
      <h2>Identify Song</h2>
      <button id="startRecording" class="btn">Listen</button>
      <p id="countdownTimer" style="font-size: 24px; color: #1ED760; padding: 10px 20px;">10s</p>
      <h3 id="song"></h3>
    </div>
